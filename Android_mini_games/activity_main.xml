<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="660dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Tips"
            android:textColor="#000002"
            android:textSize="15dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewGesture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textViewScore1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewGesture"
        android:text="TextView"
        android:textColor="#46FF33"/>

    <TextView
        android:id="@+id/textViewScore2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewScore1"
        android:text="TextView"
        android:textColor="#FFBD33"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewScore2"
        android:text="@string/button1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:text="@string/button2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/button2"
        android:layout_marginTop="-7dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150px"
            android:layout_height="150px"
            app:srcCompat="@drawable/g01" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150px"
            android:layout_height="150px"
            app:srcCompat="@drawable/g02" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="150px"
            android:layout_height="150px"
            app:srcCompat="@drawable/g03" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="150px"
            android:layout_height="150px"
            app:srcCompat="@drawable/g04" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="150px"
            android:layout_height="150px"
            app:srcCompat="@drawable/g05" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="150px"
            android:layout_height="150px"
            app:srcCompat="@drawable/g06" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="150px"
            android:layout_height="150px"
            app:srcCompat="@drawable/g07" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="150px"
            android:layout_height="150px"
            app:srcCompat="@drawable/g08" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="150px"
            android:layout_height="150px"
            app:srcCompat="@drawable/g09" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="48dp"
        android:layout_height="400dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="-110dp"
        android:layout_toLeftOf="@id/button2"
        android:baselineAligned="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="150px"
            android:layout_height="100px"
            android:layout_weight="0.5"
            android:text="@string/Score2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="150px"
            android:layout_height="100px"
            android:layout_weight="0.5"
            android:text="@string/Score3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="150px"
            android:layout_height="100px"
            android:layout_weight="0.5"
            android:text="@string/Score6" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="150px"
            android:layout_height="100px"
            android:layout_weight="0.5"
            android:text="@string/Score9" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="150px"
            android:layout_height="100px"
            android:layout_weight="0.5"
            android:text="@string/Score8" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="150px"
            android:layout_height="100px"
            android:layout_weight="0.5"
            android:text="@string/Score4" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="150px"
            android:layout_height="100px"
            android:layout_weight="0.5"
            android:text="@string/Score5" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="150px"
            android:layout_height="100px"
            android:layout_weight="0.5"
            android:text="@string/Score7" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:text="@string/Score1" />
    </LinearLayout>


</RelativeLayout>